{
  "compilerOptions": {
    // Your existing compiler options...
    // Add this to make TypeScript less strict
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "strictBindCallApply": false,
    "strict": false,
    // For your specific error, these might help
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    // This can help with module resolution issues
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // This can help with the Next.js specific issues
    "jsx": "preserve",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
